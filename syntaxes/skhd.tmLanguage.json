{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "skhd",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#commands"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [{
        "name": "comment.line.number-sign.skhd",
        "match": "#(.*)$"
      }]
    },

    "commands": {
      "patterns": [{
        "begin": "\\s*(.+?)\\s+?(:)",
        "beginCaptures": {
          "1": {
            "name": "storage.type"
          },
          "2": {
            "name": "markup.bold"
          }
        },
        "end": "(.+(?<!\\\\)$)",
        "endCaptures": {
          "1": {
            "name": "source.shell.skhd",
            "patterns": [{
              "include": "source.shell"
            }]
          }
        },
        "contentName": "source.shell.skhd",
        "patterns": [{
          "include": "source.shell"
        }]
      }]
    }
  },

  "scopeName": "source.skhd"
}